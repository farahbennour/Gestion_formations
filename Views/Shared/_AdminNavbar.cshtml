 @inject IHttpContextAccessor HttpContextAccessor
@{
    var token = HttpContextAccessor.HttpContext?.Session.GetString("Token");
    var username = HttpContextAccessor.HttpContext?.Session.GetString("Username");
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Gestion Formations</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .custom-sidebar {
            width: 300px !important;
            height: 100vh;
            background: linear-gradient(180deg, #f8f9fa 0%, #e9ecef 100%);
            box-shadow: 5px 0 15px rgba(0, 0, 0, 0.05);
            position: fixed;
            left: 0;
            top: 0;
            z-index: 1000;
            padding-top: 0.5rem;
        }

        .navbar-brand {
            font-weight: 700;
            letter-spacing: 1px;
            color: #007bff !important;
            padding: 2rem 1.5rem; /* Augmentation du padding vertical */
            border-bottom: 2px solid #dee2e6;
            width: 100%;
            margin: 0; /* Suppression des marges */
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .nav-link {
            transition: 0.2s all cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            border-radius: 8px;
            margin: 4px 0;
            /* Ajouter pour garantir l'espace nécessaire */
            margin-left: 8px;
            left: -30px;
        }

            .nav-link:hover {
                background: #007bff;
                color: white !important;
                transform: translateX(-15px); /* Décalage vers la gauche */
                /* Solution alternative si translateX ne fonctionne pas : */
                /* position: relative;
            left: -8px; */
            }

                .nav-link:hover::before {
                    content: '';
                    position: absolute;
                    /* Placer la barre à droite après le décalage */
                    left: -15px;
                    top: 0;
                    height: 100%;
                    width: 4px;
                    background: #007bff;
                    border-radius: 4px;
                }

        /* Garantir que le parent permet le débordement */
        .nav-items-container {
            overflow: visible !important;
            padding-left: 8px; /* Créer de l'espace à gauche */
        }

        .profile-section {
            padding: 1rem 1.5rem;
            text-align: center;
            border-bottom: 1px solid #dee2e6;
        }

        .profile-icon {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: #007bff;
            margin: 0 auto 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
            margin-top: 10px;
        }


        .user-info {
            margin-top: -0.5rem;
        }

        .username {
            font-size: 1.1rem;
            font-weight: 500;
            color: #007bff !important;
        }

        .nav-items-container {
            flex: 1;
            overflow-y: auto;
            
            padding: 1rem 0.25rem;
        }

        @@media (max-width: 992px) {
            .custom-sidebar {
                left: -300px;
                transition: 0.3s all;
            }

                .custom-sidebar.active {
                    left: 0;
                }

            body {
                margin-left: 0 !important;
            }
        }
    </style>
</head>
<body style="margin-left: 300px;">
    <nav class="navbar navbar-expand-lg navbar-light custom-sidebar">
        <div class="container-fluid d-flex flex-column h-100">
            <!-- En-tête -->
            <div>
               

                <div class="profile-section">
                    <div class="profile-icon">
                        <i class="fas fa-user"></i>
                    </div>
                    @if (!string.IsNullOrEmpty(username))
                    {
                        <div class="user-info">
                            <span class="username">@username</span>
                            
                        </div>
                        <div><small  style= "color: green">Connecté</small></div>
                    }
                </div>
                <a class="navbar-brand" asp-controller="Auth" asp-action="Dashboard">
                    <i class="fas fa-graduation-cap me-2"></i>Gestion Formations
                </a>
            </div>

            <!-- Liens de navigation -->
            <div class="nav-items-container">
                <div class="collapse navbar-collapse" id="sidebarCollapse">
                    <ul class="navbar-nav flex-column w-100">
                        <li class="nav-item">
                            <a class="nav-link text-dark fs-5 py-3 d-flex align-items-center"
                               asp-controller="Auth" asp-action="Dashboard">
                                <i class="fas fa-home me-3 fs-4"></i>
                                Accueil
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fs-5 py-3 d-flex align-items-center"
                               asp-controller="formations" asp-action="List">
                                <i class="fas fa-book-open me-3 fs-4"></i>
                                Formations
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fs-5 py-3 d-flex align-items-center"
                               asp-controller="Auth" asp-action="ListUsers">
                                <i class="fas fa-book-open me-3 fs-4"></i>
                                Utilisateurs
                            </a>
                        </li>
                        <li class="nav-item mt-auto">
                            <a href="javascript:void(0);"
                               class="nav-link text-danger fs-5 py-3 d-flex align-items-center"
                               onclick="document.getElementById('logoutForm').submit();">
                                <i class="fas fa-sign-out-alt me-3 fs-4"></i>
                                Déconnexion
                            </a>
                        </li>

                        <form id="logoutForm" asp-controller="Auth" asp-action="Logout" method="post" style="display:none;">
                            @if (!string.IsNullOrEmpty(token))
                            {
                                <input type="hidden" name="Token" value="@token" />
                            }
                        </form>

                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- Contenu principal -->
    <main class="container mt-3">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Activation des liens
            const currentPath = window.location.pathname;
            document.querySelectorAll('.nav-link').forEach(link => {
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                }
            });

            // Toggle sidebar mobile
            document.querySelector('.navbar-toggler').addEventListener('click', function () {
                document.querySelector('.custom-sidebar').classList.toggle('active');
            });

            // Fermeture automatique en mobile
            document.querySelectorAll('.nav-link').forEach(link => {
                link.addEventListener('click', () => {
                    if (window.innerWidth < 992) {
                        document.querySelector('.custom-sidebar').classList.remove('active');
                    }
                });
            });
        });
       

    </script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>