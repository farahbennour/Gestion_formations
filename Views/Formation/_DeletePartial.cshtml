<form asp-controller="formations" asp-action="ConfirmDelete" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <p>Êtes-vous sûr de vouloir supprimer @Model.Nom ?</p>
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a href="/formations" class="btn btn-secondary">Annuler</a>
</form>
