@model Gestion_Formations.Models.Formation

<form asp-action="Modifier" asp-controller="Formation" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="Nom" class="form-label fw-bold"></label>
        <input asp-for="Nom" class="form-control form-control-lg" />
        <span asp-validation-for="Nom" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description" class="form-label fw-bold"></label>
        <textarea asp-for="Description" class="form-control form-control-lg" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Date_Heure" class="form-label fw-bold"></label>
        <input asp-for="Date_Heure" class="form-control form-control-lg" />
        <span asp-validation-for="Date_Heure" class="text-danger"></span>
    </div>

    <div class="form-group mt-4 d-flex justify-content-end">
        <input type="submit" value="Enregistrer" class="btn btn-success btn-lg me-2" />
        <input type="button" value="Annuler" class="btn btn-danger btn-lg" data-bs-dismiss="modal" />
    </div>
</form>
